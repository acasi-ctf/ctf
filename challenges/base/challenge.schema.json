{
  "$id": "challenge-schema",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "challenge",
  "description": "Describes high-level information for a challenge",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "provisioner": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "kubernetes"
          ]
        }
      },
      "required": [
        "type"
      ]
    }
  },
  "required": [
    "name",
    "description",
    "version",
    "provisioner"
  ]
}
